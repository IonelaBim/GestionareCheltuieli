<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearMain">

    </LinearLayout>
    <Button
        android:text="@string/scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scan_button"
        android:background="@color/colorPrimaryDark"
        android:textStyle="normal|bold"
        android:lineSpacingExtra="18sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:text="Produse scanate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:layout_alignTop="@+id/cartButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/cart"
        android:id="@+id/cartButton"
        style="@android:style/Widget.ImageButton"
        android:background="@android:color/background_light"
        android:adjustViewBounds="true"
        android:tint="@color/zxing_viewfinder_laser"
        android:scaleType="fitCenter"
        android:cropToPadding="false"
        android:baselineAlignBottom="false"
        android:layout_below="@+id/linearMain"
        android:layout_toLeftOf="@+id/cartCount"
        android:layout_toStartOf="@+id/cartCount" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cartCount"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="?attr/colorBackgroundFloating"
        android:background="@drawable/rouded_textview"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="16dp" />

    <ListView
        android:id="@+id/list"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/Widget.AppCompat.ListView"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/cartButton"
        android:layout_toEndOf="@+id/cartButton">
    </ListView>


</RelativeLayout>