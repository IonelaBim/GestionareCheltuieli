<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:paddingTop="2.5dp"
android:paddingBottom="2.5dp"
android:paddingLeft="5dp"
android:paddingRight="5dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="5dp"
        android:focusable="true">

        <!-- ListRow Left sied Thumbnail image -->

        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="7dip"
            android:padding="2dip" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/property_image_1" />

        </LinearLayout>

        <!-- Title Of Song -->



        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Pineapple"
            android:textColor="#040404"
            android:textSize="15dip"
            android:typeface="sans"
            android:textStyle="normal|bold" />



        <LinearLayout
            android:id="@+id/cart_plus_minus_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/thumbnail">

            <TextView
                android:id="@+id/product_description"
                android:layout_height="29dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="60dip"
                android:layout_weight="0.65"
                android:paddingRight="5dip"
                android:text="Rs. 200"
                android:textColor="#1d1d1d"
                android:textSize="12dip"
                android:layout_width="100dip" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/thumbnaila"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dip"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <Button
                android:id="@+id/addtocart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/add_cart"
                android:text="ADD"
                android:textStyle="normal|bold"
                android:textSize="12sp"
                android:focusable="false"
                android:backgroundTint="@android:color/holo_green_dark"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/product_name"
                android:layout_toEndOf="@+id/product_name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.38"
            android:layout_alignTop="@+id/cart_plus_minus_layout"
            android:layout_toLeftOf="@+id/thumbnaila"
            android:layout_toStartOf="@+id/thumbnaila"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp">

            <TextView
                android:text="Pret:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingRight="25dip"
                android:text="100 lei"
                android:textColor="#343434"
                android:textSize="12dip" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>